<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema de la aplicaciÃ³n -->
    <style name="Theme.Store" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
    <!-- Tema de la splash screen -->
    <style name="Theme.Store.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Store</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>
    <!-- Apariencia de hint/label en rojo -->
    <style name="HintRed" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/redAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Store.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Store.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Store.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
